<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="600.0" styleClass="root" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="neuroflip.NeuroFlip.GamefileController">
    <stylesheets>
<!--        <URL value="@styles.css" />-->
    </stylesheets>
    <VBox alignment="CENTER" layoutX="202.0" layoutY="21.0" spacing="20.0">
        <Label fx:id="welcomeLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" styleClass="label-welcome" text="Welcome, Player!" />
        <GridPane fx:id="cardGrid" alignment="CENTER" hgap="10" vgap="10" />
        <HBox alignment="CENTER" spacing="20.0">
            <Label fx:id="movesLabel" styleClass="label-info" text="Moves: 0" />
            <Label fx:id="timeLabel" styleClass="label-info" text="Time: 00:00" />
        </HBox>
        <Button fx:id="resetButton" onAction="#resetGame" styleClass="button-reset" text="Reset Game" />
    </VBox>
   <Button fx:id="back" layoutX="29.0" layoutY="21.0" mnemonicParsing="false" text="←">
      <font>
         <Font name="System Bold" size="13.0" />
      </font>
   </Button>
</AnchorPane>
